<div class="container p-4">
    <div class="row">
        <div class="col-md4 mx-auto">
            <div class="card text-center">
                <div class="card-body">
                    <h3>Bienvenido {{user.usuario}}</h3>
                    {{#each roluser}}
                    <h4>{{rol}}</h4>
                    {{/each}}
                    <h4><br><b>Sus funcionalidades son:</b></h4>
                    {{#each funcionalidades}}
                    <h4>{{funcionalidad}}</h4>
                    {{/each}}
                    {{#if administrador}}
                    <a href="/links" class="btn btn-info m-4">
                        Editar roles y funciones
                    </a>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>