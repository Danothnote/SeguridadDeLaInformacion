                                    <label class="form-check-label" for="noestudiante">
                                        {{funcionalidad}}
                                    </label>
                                </div>
                                {{/each}}
                            </div>
                        </div>
                        <div class="div" style="text-align: center; margin-top: 20px;">
                            <button class="btn btn-info">
                                Guardar cambios
                            </button>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h4 style="text-align: center; margin-bottom: 10px;"><b>Docente</b></h4>
                        <div class="row" style="justify-content: space-around;">
                            <div style="margin-top: 10px;">
                                <form action="/links/edit/3" method="POST">
                                    <div style="text-align: center;">
                                        <h5>Actuales</h5>
                                        <h6>(Eliminar)</h6>
                                    </div>
                                    {{#each funcDocente}}
                                    <div class="form-check">
