                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-header text-white bg-dark mb-3">
        Rol de usuarios
    </div>
    <div class="card-body">
        <div class="row" style="justify-content: space-around;">
            {{#each roluser}}
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h4 style="text-align: center; margin-bottom: 10px;"><b>{{usuario}}</b></h4>
                        <h6><b>Rol actual: </b>{{rol}}</h6>
                        <h5><b>Nuevo rol:</b></h5>
                        <form action="/links/edit/{{id_usuario}}" method="POST">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="radius" value="1">
                                <label class="form-check-label" for="radEstudiante">
                                    Estudiante
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="radius" value="2">
                                <label class="form-check-label" for="radSecretario">
                                    Secretario
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="radius" value="3">
                                <label class="form-check-label" for="radDocente">
                                    Docente
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="radius" value="4">
                                <label class="form-check-label" for="radAdministrador">
                                    Administrador
                                </label>
                            </div>
                            <div class="div" style="text-align: center;">
                                <button class="btn btn-info" style="margin-top: 10px;">
                                    Guardar cambios
                                </button>
                            </div>
                        </form>
                        <form action="/links/delete/{{id_usuario}}" method="POST" style="text-align: center;">
                            <button class="btn btn-danger" style="margin-top: 10px;">
                                Eliminar usuario
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>