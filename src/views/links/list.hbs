<div class="card" style="margin: 10px 10px 10px 10px;">
    <div class="card-header text-white bg-dark mb-3">
        Funcionalidades de los roles
    </div>
    <div class="card-body">
        <div class="row" style="justify-content: space-around;">
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h4 style="text-align: center; margin-bottom: 10px;"><b>Estudiante</b></h4>
                        <div class="row" style="justify-content: space-around;">
                            <div style="margin-top: 10px;">
                                <form action="/links/edit/1" method="POST">
                                    <div style="text-align: center;">
                                        <h5>Actuales</h5>
                                        <h6>(Eliminar)</h6>
                                    </div>
                                    {{#each funcEstudiante}}
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="{{id_funcionalidad}}"
                                            name="checked">
                                        <label class="form-check-label" for="estudiante">
                                            {{funcionalidad}}
                                        </label>
                                    </div>
                                    {{/each}}
                            </div>
                            <div style="margin-top: 10px;">
                                <div style="text-align: center;">
                                    <h5>No asignados</h5>
                                    <h6>(Agregar)</h6>
                                </div>
                                {{#each nofuncEstudiante}}
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="{{id_funcionalidad}}"
                                        name="unchecked">
                                    <label class="form-check-label" for="noestudiante">
                                        {{funcionalidad}}
                                    </label>
                                </div>
                                {{/each}}
                            </div>
                        </div>
                        <div class="div" style="text-align: center; margin-top: 20px;">
                            <button class="btn btn-info">
                                Guardar cambios
                            </button>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
